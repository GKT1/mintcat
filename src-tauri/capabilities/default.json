{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$DESKTOP/**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$DESKTOP/**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$DESKTOP/**" }]
    }
  ]
}
